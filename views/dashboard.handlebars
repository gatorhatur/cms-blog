<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div class="mb-3">
      <label class="form-label" for="post-title">Title</label>
      <input class="form-control" type="text" id="post-title" name="post-title" />
    </div>
    <div class="mb-3">
      <label class="form-label" for="post-text">Content</label><br>
      <textarea class="form-control" name="post-text" id="post-text" rows="4" cols="100"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class="mt-3">
  <h2>Your Posts</h2>
  <ul>
    {{#each posts as |post|}}
    <li class="mb-3">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
