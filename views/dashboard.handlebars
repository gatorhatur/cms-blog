
    <button type="submit" data-bs-toggle="modal" data-bs-target="#post-modal" class="btn btn-primary">Create New Post</button>

    {{>post-modal}}


{{#if posts.length}}
<section class="mt-3">
  <h2>Your Posts</h2>
  <ul>
    {{#each posts as |post|}}
    <li class="mb-3">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link btn btn-primary mt-3">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

